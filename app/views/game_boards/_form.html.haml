= form_for @game_board do |f|
  - if @game_board.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game_board.errors.count, "error")} prohibited this game_board from being saved:"
      %ul
        - @game_board.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :width
    = f.number_field :width
  .field
    = f.label :height
    = f.number_field :height
  .field
    = f.label :bomb_amount
    = f.number_field :bomb_amount
  .field
    = f.label :email
    = f.text_field :email
  .actions
    = f.submit 'Save'
